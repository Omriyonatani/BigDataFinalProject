  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script>
    //creating the time array with 5 min' aggregation
    function getTimeRanges(interval, language = window.navigator.language) {
      const ranges = [];
      const date = new Date();
      const format = {
        hour: 'numeric',
        minute: 'numeric',
      };

      for (let minutes = 0; minutes < 24 * 60; minutes = minutes + interval) {
        date.setHours(0);
        date.setMinutes(minutes);
        ranges.push(date.toLocaleTimeString(language, format));
      }

      return ranges;
    }

    async function insertWatingCalls(){
      return new Promise (res=>{
        
        socket.on("totalWaitingCalls", (msg)=> {
          var today = new Date();
          var TimeInMin = (parseInt(today.getHours()) * 60) + parseInt(today.getMinutes());
          sessionStorage.setItem(`total Waiting Calls at ${TimeInMin}`,msg.value);
          res(msg.value);
        });
      });      
    }
   
    
     
   function startFromNow(str){
    let i=0;
    let newPoint=[];
   
    const labels = getTimeRanges(5, 'ru') 
    var today = new Date();
    var TimeInMin = (parseInt(today.getHours()) * 60) + parseInt(today.getMinutes());
    while(i< labels.length){

      var labelsInMin = (parseInt(labels[i].split(":")[0]) * 60) + parseInt(labels[i].split(":")[1]);
      if (TimeInMin >= labelsInMin) {
        var data_from_storage = sessionStorage.getItem(`${str} at ${labelsInMin}`);
        if(data_from_storage != null )  {
         newPoint.push(data_from_storage);
         }else {
          
          for(let j=4;j>0;j--){
              data_from_storage = sessionStorage.getItem(`${str} at ${(labelsInMin-j)}`);
              // alert("labels in min =" + labelsInMin +"\nlabels in min -j = " +(labelsInMin-j))
              for (let k = j; k >0; k--) {
                var data_from_storage2 = sessionStorage.getItem(`${str} at ${(labelsInMin-k)}`);
                if (data_from_storage2 < data_from_storage  ) {
                  
                  data_from_storage = data_from_storage2;
                }
              }
              if(data_from_storage != null )  {

                  newPoint.push(data_from_storage);
                // j=0 to exsit the for loop                
                  // j=0;
              }else{
                  continue;
                }   
          }
          newPoint.push(0)
        }
      }else{
        break;
      }
      i+=1;
    }
    return newPoint;
  }

  let newPoint1 = startFromNow("total Waiting Calls");
  const labels1 = getTimeRanges(5, 'ru')

    const data = {
      labels: labels1,
      datasets: [{
        backgroundColor: 'rgb(255, 99, 132)',
        borderColor: 'rgb(255, 99, 132)',
        data: newPoint1,
      }, ]
    };

    const config = {
      type: 'line',
      data: data,
      options: {
        plugins: {
          legend: {
            display: false,
          }
        },
        scales: {
          y: {
            min: 0,
            max: 200
          }
        }

      }
    };

    const myChart = new Chart(
      document.getElementById('myChart'), config);

    async function addData(chart= myChart) {
       
     chart.data.datasets.forEach((dataset) => {
      
        insertWatingCalls().then(data=>{ 
        
          dataset.data.push(data);
        })
        });
       
        await myChart.update();
      }
     
      // setTimeout(addData,300000)
    
   
  </script>
</div>

